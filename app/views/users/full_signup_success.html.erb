<% provide(:title, "本登録完了") %>
<div id="container">
  <%= render 'shared/hgroup' %>
  <div id="signup-form">
    <div class="panel panel-success" style="width: 350px; margin-left: auto; margin-right: auto;">
      <div class="panel-heading">
        <h3 class="panel-title">本登録完了！</h3>
      </div>
      <div class="panel-body">
        <%= "ログインしましょう！"%>
        <br>
        <%= "さっそく「１日目の問答」をはじめてください。" %>
      </div>
    </div>
    <p><%= link_to "ログイン", "#", :'data-toggle' => "modal", :'data-target' => "#mondo_edit_modal", :'data-no-turbolink' => "true" %></p>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="mondo_edit_modal" role="dialog">
  <div class="modal-dialog" style="width: 400px;">
    <div class="modal-content">
      <%= form_for(:session, url: login_path) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><%= "ログインフォーム" %></h4>
      </div>
      <div class="modal-body">
        <div id="signup-form">
	      <%= f.text_field :email, class: 'form-control', :placeholder => "Emailアドレス" %>
	      <br>
	      <%= f.text_field :password, class: 'form-control', type: "password", :placeholder => "パスワード" %>
	      <br><br>
        </div>
        <div class="modal-footer">
          <%= f.submit "ログイン", class: "btn btn-default" %>
        </div>
      <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->