<% provide(:title, "サインアップ") %>
<div id="container">
  <%= render 'shared/hgroup' %>
  <div id="signup-form">
    <p class="text-danger"><%= notice %></p>
    <%= form_for :user, url: root_path do |f| %>
      <%= f.text_field :name, class: 'form-control', placeholder: "お名前" %>
      <br>
      <%= f.text_field :email, class: 'form-control', placeholder: "Emailアドレス" %>
      <br>
      <%= f.submit "はじめる", class: "btn btn-default" %>
      <br><br>
    <% end %>
    <p><a data-no-turbolink='true' href="/login">ログイン</a></p>
  </div>
  <%= render 'shared/footer' %>
</div>