@font-face {
    font-family: 'Glyphicons Halflings';
    src: url('<%= Rails.root + '/app/assets/fonts/glyphicons-halflings-regular.eot' %>');
    src: url('<%= Rails.root + '/app/assets/fonts/glyphicons-halflings-regular.eot?#iefix' %>') format('embedded-opentype'),
         url('<%= Rails.root + '/app/assets/fonts/glyphicons-halflings-regular.woff' %>') format('woff'), 
         url('<%= Rails.root + '/app/assets/fonts/glyphicons-halflings-regular.ttf' %>') format('truetype'), 
         url('<%= Rails.root + '/app/assets/fonts/glyphicons-halflings-regular.svg#glyphicons-halflingsregular' %>') format('svg')
}
